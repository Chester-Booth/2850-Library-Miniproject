<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="color-scheme" content="light">

    {# bootstrap #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    {# fonts #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">

    {# interal references to stylesheets #}
    <link href="/static/colours.css" rel="stylesheet">
    <link href="/static/style.css" rel="stylesheet">
    {% block head %}{% endblock %}
    <title>{% block title %}Library{% endblock %}</title>
</head>
<body>

{# navbar #}
<nav class="navbar navbar-expand-sm alt-background">
  {# mobile toggle #}
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    {# left-aligned items #}
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="/">
                <i class="bi bi-house-fill"></i>Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/loans">
              <i class="bi bi-bookmarks-fill"></i>Loans</a>
        </li>
      </ul>

      {# right-aligned items #}
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/search">
              <i class="bi bi-search"></i>Search</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/login">
              <i class="bi bi-person-circle me-1"></i>Account</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<main class="container" >
{% block content %}{% endblock %}
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>